@import "./macros"
@import "./colors"

html
	gradient(color2, #fff); height 100%;

.head
	height 100%;
	gradient(headGr1, headGr2); borderTop 1px solid #E3E9ED; box-shadow 0 1px 3px #666;
	.title
		text-shadow 0 1px 0 headTxtSh; color:#fff; font-size 16px; padding 0 4px;
		font-size 20px; text-align center; padding 8px 0 0 0; font-weight 600;
	.back
		position absolute; top 5px; left 4px; border-width 2px;

.login.button
	font-weight bold; font-size 22px; text-shadow 0 1px 0 #999; width 120px; margin 160px auto; padding 6px 8px 8px; box-shadow 0 1px 0 #999;
.login.button.tap-active
	text-shadow none; box-shadow 0 0 0;

.button
	padding 4px 8px 6px; border-radius 10px; gradient(color4, color5); border 3px solid #fff; color #fff; text-align center;
.button.tap-active
	gradient(color5, color5);

.section
	.header
		height 40px; background color4; color #fff; // gradient(color4, color5); 
		.label
			padding 9px;

.contacts
	padding 1px 0 0 2px;
	.face
		float left; margin 2px 2px 1px 1px;

.conversations
	.item
		margin 4px;
		.face
			float left; margin 0 4px 0 0;
		.messageBubble
			float left;

.messageBubble
	padding 11px 8px; border-radius 10px; background #fff; border 4px solid color4;

.conversation
	.messageBubble
		margin 4px 8px 0;
	.composer
		position absolute; bottom 0; margin 8px;
		.bodyInput
			width 300px; margin 0 0 4px;
		.send.button
			width 284px;

.clear
	clear both

.ghostTown
	text-align center; color #fff; text-shadow 0 1px 0 headTxtSh; margin 10px 0;