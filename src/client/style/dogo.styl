@import "./normalize"

gradientLight = #D6DDE2
gradientDark = #B0BAC2

// http://www.colourlovers.com/palette/92095/Giant_Goldfish
color1 = #71D1EA
color2 = #AADBD8
color3 = #E0E4C9
color4 = #EF8805
color5 = #F56B00

headGr1 = color4
headGr2 = color5
textShadow = 0 1px 0 #888;
buttonShadow = 0 1px 2px #444;

.app
	background linear-gradient(top, color2, #fff); height 100%;
	-webkit-touch-callout: none;
	-webkit-user-select: none; /* Disable selection/Copy of UIWebView */

.scroller-head
	z-index 1; box-shadow 0 1px 4px #333;
	
.head
	height 100%;
	background linear-gradient(top, headGr1, headGr2); borderTop 1px solid #E3E9ED;
	.title
		text-shadow textShadow; color:#fff; font-size 16px; padding 0 4px;
		font-size 20px; text-align center; padding 8px 0 0 0; font-weight 600;
	.back
		position absolute; top 5px; left 4px; border-width 2px;
	.devBar
		absolute top right;
		.button
			margin 2px;
	

.connect
	text-align center; width 100%;
	.button
		font-weight bold; font-size 22px; text-shadow textShadow; width 120px; margin 160px auto; padding 6px 8px 8px;
	.button.active
		text-shadow none;

.home
	.section
		.header
			height 40px; background color4; color #fff; // gradient(color4, color5); 
			.label
				padding 9px; text-shadow textShadow;
	.conversations
		.unreadDot
			width 20px; height 20px; background color1; border-radius 10px;
			float right; margin 15px 8px 0 0; display none;
		.hasUnread .unreadDot
			display block;
		.youStarted
			color #666; font-style italic;
	.friends
		padding 1px 0 0 2px;
		.face
			float left; margin 2px 2px 1px 1px;
		.member-ribbon
			width 16px; height 16px; background url("http://icons.iconarchive.com/icons/famfamfam/silk/16/award-star-gold-3-icon.png"); float right; margin 2px 0;
	

buttonRadius = 10px;
.button
	padding 4px 8px 6px; border-radius buttonRadius; background linear-gradient(top, color4, color5); border 3px solid #fff;
	color #fff; text-align center; display inline-block; cursor pointer; box-shadow buttonShadow;
.button.active
	background linear-gradient(bottom, color4, color5); box-shadow 0 0 0;


.face
	width 50px; height 50px;

.loading
	color #666; text-align center; margin 10px auto; font-style italic;

.messageBubble
	margin 4px; min-height 50px; border-radius 10px; background #fff; border 4px solid color4;
	text-align left; 
	.body
		padding 5px;
	.face
		float left; border-radius 6px 2px 2px 6px; margin 0 6px 0 0;
.messageBubble.fromMe
	text-align right;
	.face
		float right; border-radius 2px 6px 6px 2px; margin 0 0 0 6px;

.conversation
	.messageBubble
		margin 4px 8px 0;
	.composer
		position absolute; bottom 0; width 310px; margin 0 0 8px 8px;
		.surface
			bodyRadius = 6px; bodyWidth = 296px;
			.writer
				display inline-block; width bodyWidth+8;
				box-shadow buttonShadow; border-radius bodyRadius; 
				textarea
					width bodyWidth; border 2px solid color4; border-radius bodyRadius; height 50px;
			.drawer
				.canvas
					border-radius 10px; box-shadow buttonShadow;
		.tools
			.tool
				display inline-block; border 1px solid #333; margin 2px 4px 0 0; border-radius 4px;
			.tool.send
				float right; margin-right 6px;

.clear
	clear both

.ghostTown
	text-align center; color #fff; text-shadow textShadow; margin 10px 0;

