@import "./normalize"

gradientLight = #D6DDE2
gradientDark = #B0BAC2

// http://www.colourlovers.com/palette/92095/Giant_Goldfish
color1 = #71D1EA
color2 = #AADBD8
color3 = #E0E4C9
color4 = #EF8805
color5 = #F56B00

// http://azuliadesigns.com/css-message-notification-bars/
blueLight = #BDE5F8
blueDark = #00529B
greenLight = #DFF2BF
greenDark = #4F8A10
yellowLight = #FEEFB3
yellowDark = #9F6000
redLight = #FFBABA
redDark = #D8000C

headGr1 = color4
headGr2 = color5
textShadow = 0 1px 0 #888;
buttonShadow = 0 1px 2px #444;

.blue
	background blueLight; color blueDark; border-color blueDark;

.green
	background greenLight; color greenDark; border-color greenDark;

.yellow
	background yellowLight; color yellowDark; border-color yellowDark;

.red
	background redLight; color redDark; border-color redDark;


.app
	background linear-gradient(top, color2, #fff); height 100%;
	-webkit-touch-callout: none;
	-webkit-user-select: none; /* Disable selection/Copy of UIWebView */
	position relative;

.scroller-head
	z-index 1; box-shadow 0 1px 4px #333;
	
.head
	height 100%;
	background linear-gradient(top, headGr1, headGr2); borderTop 1px solid #E3E9ED;
	.title
		text-shadow textShadow; color:#fff; font-size 16px; padding 0 4px;
		font-size 20px; text-align center; padding 8px 0 0 0; font-weight 600;
	.back
		position absolute; top 5px; left 4px; border-width 2px;
	.devBar
		absolute top right;
		.button
			margin 2px;
	

.connect, .invite
	text-align center; width 100%;
	.button
		font-size 22px; text-shadow textShadow; margin 0 auto; padding 6px 8px 8px;
	.button.active
		text-shadow none;
.connect .button
	font-weight bold; margin 160px auto; width 120px; 
.invite .button
	width 210px;

.home
	.section
		.header
			height 40px; background color4; color #fff; // gradient(color4, color5); 
			.label
				padding 9px; text-shadow textShadow;
	.conversations
		min-height 254px;
		.messageBubble
			.name, .body
				padding 3px 5px 0 5px;
			.unreadDot
				width 20px; height 20px; background color1; border-radius 10px;
				float right; margin 15px 8px 0 0; display none;
		.messageBubble.hasUnread .unreadDot
				display block;
		.youStarted
			color #666; font-style italic;
	.friends
		padding 1px 0 0 2px;
		.face
			float left; margin 2px 2px 1px 1px;
		.member-ribbon
			width 16px; height 16px; background url("http://icons.iconarchive.com/icons/famfamfam/silk/16/award-star-gold-3-icon.png"); float right; margin 2px 0;
	

buttonRadius = 10px;
.button
	padding 4px 8px 6px; border-radius buttonRadius; background linear-gradient(top, color4, color5); border 3px solid #fff;
	color #fff; text-align center; display inline-block; cursor pointer; box-shadow buttonShadow;
.button.active
	background linear-gradient(bottom, color4, color5); box-shadow 0 0 0;


faceDim = 50px
.face
	width faceDim; height faceDim;

.loading
	color #666; text-align center; margin 10px auto; font-style italic;

.messageBubble
	margin 4px 4px 0; min-height 50px; border-radius 10px; background #fff; border 3px solid color4; word-wrap break-word;
	.face
		float left; border-radius 6px 1px 2px 1px; margin 0 6px 0 0;
.messageBubble.fromMe
	text-align right;
	.face
		float right; border-radius 1px 6px 1px 2px; margin 0 0 0 6px;

.conversation
	.messages
		padding 0 0 44px 0;
	.messageBubble
		.body
			padding 4px 1px;
		.picture
			border-radius 6px;
			
	.dogo-info
		width 100%; margin 4px 0; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.button
			margin-top 4px;
	
	.composer
		position absolute; bottom 0; width 320px; padding 0;
		background linear-gradient(top, rgba(60,60,60,0.0), rgba(60,60,60,0.9))
		.surface
			bodyRadius = 6px; bodyWidth = 320px;
			.writer
				display inline-block; width bodyWidth; box-shadow 0 -1px 6px #444;
				textarea
					border none; width bodyWidth - 4px; height 50px;

		.tools
			.tool
				display inline-block; border 2px solid #fff; margin 2px 4px 2px 0; border-radius 4px;
			.tool.send
				float right; margin-right 1px;

.draw
	line-height 0;
	position absolute; bottom 0;
	.canvas
		// position absolute; bottom 0;
	.colorPicker
		position relative; bottom 10px; left 2px;
	.controls-pos
		position absolute; bottom 0;
	.controls
		line-height 20px; background linear-gradient(top, #bbb, #666); padding 4px 0; box-shadow -1px 0 3px #000; width 100%;
		.tools
			margin 0 0 0 50px;
		.button
			margin 0 2px;
		.send
			float right;
	.close.button
		position absolute; z-index 1; font-size 14px; padding 11px 7px;

.clear
	clear both

.ghostTown
	text-align center; color #fff; text-shadow textShadow; margin 10px 0;

