@import "./normalize"
@import "./colors"

.app
	background linear-gradient(top, color2, #fff); height 100%;

.head
	height 100%;
	background linear-gradient(top, headGr1, headGr2); borderTop 1px solid #E3E9ED; box-shadow 0 1px 3px #333;
	.title
		text-shadow 0 1px 0 headTxtSh; color:#fff; font-size 16px; padding 0 4px;
		font-size 20px; text-align center; padding 8px 0 0 0; font-weight 600;
	.back
		position absolute; top 5px; left 4px; border-width 2px;

.connect
	text-align center; width 100%;
	.button
		font-weight bold; font-size 22px; text-shadow 0 1px 0 #999; width 120px; margin 160px auto; padding 6px 8px 8px; box-shadow 0 1px 0 #999;
	.button.active
		text-shadow none; box-shadow 0 0 0;

.button
	padding 4px 8px 6px; border-radius 10px; background linear-gradient(top, color4, color5); border 3px solid #fff; color #fff; text-align center; display inline-block; cursor pointer;
.button.active
	background linear-gradient(bottom, color4, color5);

.section
	.header
		height 40px; background color4; color #fff; // gradient(color4, color5); 
		.label
			padding 9px;

.friends
	padding 1px 0 0 2px;
	.face
		float left; margin 2px 2px 1px 1px;
	.member-ribbon
		width 16px; height 16px; background url("http://icons.iconarchive.com/icons/famfamfam/silk/16/award-star-gold-3-icon.png"); float right; margin 2px 0;

.conversations
	.list-item
		.messageBubble
			margin 4px; min-height 50px
			.face
				float left; border-radius 6px 2px 2px 6px; margin-right 6px;
		.messageBubble.fromMe
			.face
				float left; border-radius 2px 6px 6px 2px; margin-left 6px;
		

.messageBubble
	border-radius 10px; background #fff; border 4px solid color4;
	.body
		padding 5px;

.conversation
	.messages
		.messageBubble
			margin 4px 8px 0;
	.composer
		position absolute; bottom 0; margin 8px;
		.bodyInput
			width 300px; margin 0 0 4px;
		.send.button
			width 284px;

.clear
	clear both

.ghostTown
	text-align center; color #fff; text-shadow 0 1px 0 headTxtSh; margin 10px 0;

.devBar
	absolute top right;