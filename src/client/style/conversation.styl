@import "./macros"
@import "./questions"

offWhite = #EBEAE7

faceDim = 25px
.face
	width faceDim; height faceDim; background-size faceDim faceDim;
	.member-ribbon
		width 16px; height 16px; background url("/blowtorch/img/badge.png"); float right; margin 32px 0 0;

small-face()
	float left; border-radius 16px; margin 0 0 0 -32px; width faceDim; height faceDim; border 1px solid #fff;

.messageBubble.fromMe, .conversation .messageBubble.fromMe
	float right; margin-right 36px;
	.face
		float right; margin 1px -31px 0 0;

.conversation
	.ghostTown
		font-style italic; font-size 20px; margin 150px 10px;
	.messages
		padding 0 0 44px 0;
	.messageBubble
		margin 5px 0 0 36px; display inline-block;
		.textContent
			light(); padding 6px 8px 6px; max-width 200px;
		.pictureContent
			border-radius 4px;
	.messageBubble.newGroup
		margin-top 10px;
	.messageBubble.picture
		box-shadow 0 0 0;
	.dogo-info
		width 100%; margin 8px 0; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;
	.loading
		margin-top 100px; text-shadow none; color #fff; font-style italic;
	.face
		small-face()



.messageBubble
	border-radius 5px; word-wrap break-word; box-shadow 0 2px 0 #BFC79F; background #fff;
	.face
		float left; small-face()
	// background url('/blowtorch/img/paper/exclusive-paper-bg.jpg'); background-size 320px 100px;

.draw-composer
	line-height 0; z-index 2; background offWhite;
	position absolute; bottom 0;
	.loading
		relative top 150px; font-size 30px;
	.controls-pos
		position absolute; bottom 0; z-index 1;
	.controls
		line-height 20px; padding 2px 0; box-shadow 0 -2px 3px #222; width 100%; height 33px;
		// background url('/blowtorch/img/background/red-linen.jpg'); background-size 327px 327px;
		background #FC9545;
		.picker
			position absolute;
		.colorPicker
			bottom 55px; left 3px;
		.penPicker
			bottom 55px; left 60px; box-shadow 0 0 1px #ccc;
		.right
			float right; position relative; bottom 1px;
			.button
				margin 0 2px; padding 4px 10px 6px;
	.close.button
		absolute top 4px; z-index 1; font-size 14px; padding 5px 7px 25px;
		.icon
			icon(20px, 20px, 'xtras-white/37-circle-x.png');

buttonRadius = 4px;
.button
	padding 3px 8px 5px; border-radius buttonRadius; background #1A84BB;
	color #fff; text-align center; display inline-block; font-weight 100;
	box-shadow 0 3px 0 #143075; -webkit-transform translateY(0);
.button.active
	box-shadow 0 0 0 #143075; -webkit-transform translateY(3px);
.dom-buttom
	cursor pointer;


