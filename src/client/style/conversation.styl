@import "./macros"

offWhite = #EBEAE7

faceDim = 25px
.face
	width faceDim; height faceDim; background-size faceDim faceDim;
	.member-ribbon
		width 16px; height 16px; background url("/blowtorch/img/badge.png"); float right; margin 32px 0 0;

.conversation
	.messages
		padding 0 0 44px 0;
	.messageBubble
		.textContent
			padding 4px 6px; light();
		.picture, .pictureContent
			border-radius 2px;
			
	.dogo-info
		width 100%; margin 8px 0; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;

.messageBubble
	margin 8px 8px 0 36px; min-height 50px; border-radius 3px; word-wrap break-word;
	.face
		float left; border-radius 18px; margin 1px 0 0 -31px; width faceDim; height faceDim; border 1px solid #fff;
.messageBubble.picture
	background offWhite
.messageBubble.text
	background url('/blowtorch/img/paper/exclusive-paper-bg.jpg'); background-size 320px 100px;
.messageBubble.fromMe
	margin 8px 36px 0 8px;
	.face
		float right; margin 1px -31px 0 0;

.draw-composer
	line-height 0; z-index 1; background offWhite;
	position absolute; bottom 0;
	.loading
		relative top 150px; font-size 30px;
	.controls-pos
		position absolute; bottom 0; z-index 1;
	.controls
		line-height 20px; padding 2px 0; box-shadow 0 -2px 3px #222; width 100%; height 33px;
		background url('/blowtorch/img/background/red-linen.jpg'); background-size 327px 327px;
		.picker
			position absolute;
		.colorPicker
			bottom 55px; left 3px;
		.penPicker
			bottom 55px; left 60px; box-shadow 0 0 1px #ccc;
		.right
			float right; position relative; bottom 1px;
			.button
				margin 0 2px; padding 4px 10px 6px;
	.close.button
		position absolute; z-index 1; font-size 14px; padding 11px 7px;

buttonRadius = 4px;
.button
	padding 3px 8px 5px; border-radius buttonRadius; background linear-gradient(top, color5, #E44212); border 1px solid #fff;
	color #fff; text-align center; display inline-block; box-shadow buttonShadow;
.button.active
	background linear-gradient(bottom, darken(color4, 10%), color5); border-color #eee; color #eee;
	box-shadow none;
.dom-buttom
	cursor pointer;


