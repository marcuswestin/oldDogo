@import "../../style/listMenu"

#connectView
	width 100%; absolute top 0;
	gradient(lighten(#227EBF, 25%), lighten(#227EBF, 75%));
	
	.centered
		text-align center;
	
	.logoIcon
		margin 32px 0 0 0;

	.notice
		width 240px; margin 0 auto; color #fff; font-size 13px;

	.link
		text-decoration underline; text-align center; text-shadow 0 1px rgba(255,255,255,.5); margin 0 0 20px;

	.stepView
		.menuItem input
			width 200px;
		.listMenu.profile
			.menuItem input, .menuItem .pickColor
				width 165px; margin-left 74px;
		
		.title
			color #555555; text-shadow 0 1px 0 rgba(232, 232, 232, 0.71); font-weight bold; margin 0 0 10px 0;

		.button
			width 270px; margin 0 auto 20px; display block;
			font-size 18px; font-weight 300; text-shadow rgba(0,0,0,.3); padding 10px 0 12px;
			border-radius 5px; color #fff; text-shadow 0 1px 0 #333;
			-webkit-box-shadow: inset 0 1px 1px -1px #fff, inset 0 -1px 1px -1px #000;
		.button.active
			box-shadow 0 0 0;
			gradient(buttonTo, buttonTo);
			-webkit-box-shadow: inset 0 1px 1px -1px rgba(0,0,0,.5);
		.error
			text-align left; padding 6px 8px; margin-left 86px; font-size 14px;
		

