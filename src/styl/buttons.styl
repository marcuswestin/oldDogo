@import "./colors"

buttonRadius = 4px;
.button
	display inline-block; text-align center;
	padding 3px 8px 5px; border-radius buttonRadius;
	color #fff;
	gradient(buttonFrom, buttonTo);
	// box-shadow 0 1px 0 buttonBoxShadow;
	// text-shadow 0 -1px 0 buttonTextShadow;
	-webkit-transform translate3d(0,0,0);
	// -webkit-transition -webkit-transform 1ms; this may be necesary to force button style to update if inside of a parent with transitioned transform on ios...
	box-shadow: inset 0 0 1px #000,
	                inset 0 1px 0 #75c2f8,
	                0 1px 1px -1px rgba(0, 0, 0, .5);
.button.active, .button.selected
	box-shadow 0 0px 0; -webkit-transform translate3d(0,1px,0);
.button.secondary
	background secondaryButton;
	box-shadow 0 1px 0 secondaryButtonBoxShadow;
.button.secondary.active, .button.secondary.selected
	box-shadow 0 0px 0 secondaryButtonBoxShadow;

.tags-button
	cursor pointer;

.link
	display inline; color #fff; text-decoration none;
.link.active, .link.hover
	text-decoration underline;
