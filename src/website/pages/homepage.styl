@import "../template/websiteTemplate"

brandGradientBackground()

#content
	padding 80px 0 0 120px;
	font-family 'Open Sans';
	#logoIcon
		logoIcon();
	#logoName
		logoName(); margin 40px 0 0 0;
		h1
			display none;
	#slogan
		bgImg('theMostExpressive', 290, 50); margin 10px 0 0 0;
		.text
			display none;
	#getDogo.button
		padding 6px 8px; margin 40px 0 0; font-size 20px; text-shadow none; font-weight 100; border-radius 6px;
		.graphic
			bgImg('getDogo', 108, 28)
		.link
			display none;

/* Smartphones (portrait and landscape) ----------- */
@media only screen and (device-width: 320px) and (max-device-width: 480px)
	#webpage
		min-height 418px;
	#content
		padding 62px 0 40px 15px;
		#logo
			absolute top 40px left 20px;
		#info
			absolute top 160px left 30px;