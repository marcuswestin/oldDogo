@import "./macros"
@import "./questions"
@import "./buttons"
@import "./faces"
@import "./common"

.conversation
	.ghostTown
		margin 150px 10px;
	.messages
		padding 0 0 44px 0;
	.messageBubble
		border-radius 3px; word-wrap break-word; box-shadow 0 1px 1px rgba(18, 110, 175, 0.74); background #fff;
		margin 5px 0 0 36px; display inline-block;
		.face
			float left; small-face()
		.textContent
			light(); padding 3px 9px; max-width 200px;
		.pictureContent
			border-radius 4px;
	.messageBubble.fromMe
		float right; margin-right 40px;
		.face
			float right; margin 0 -34px 0 0;
	.messageBubble.newGroup
		margin-top 10px;
	.messageBubble.picture
		box-shadow 0 0 0;
	.dogo-info
		blueNotice()
		width 100%; margin 8px 0; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;
	.loading
		margin-top 100px; text-shadow none; color #fff; font-style italic;
	.face
		small-face()
	.invite
		text-align center; width 100%;
		.button
			font-size 22px; text-shadow rgba(0,0,0,.3); margin 0 auto; padding 6px 8px 8px; width 210px;

.drawer
	line-height 0; z-index 2; background #000;
	position absolute; bottom 0;
	.loading
		relative top 150px; font-size 30px;
	.controls-pos
		position absolute; bottom 0; z-index 1;
	.controls
		line-height 20px; padding 2px 0; box-shadow 0 -2px 3px #222; width 100%; height 33px;
		background #FC9545;
		.picker
			position absolute;
		.toolPicker
			bottom 55px; left 3px;
			.secondary
				absolute bottom 0 left 56px; box-shadow 0 0 1px #ccc;
		.right
			float right; position relative; bottom 1px;
			.button
				margin 0 2px; padding 4px 10px 6px;
				.icon
					display inline-block;
			.button.undo
				padding-bottom 0px; margin-top 1px;
				.icon
					icon(19px, 23px, 'white/215-subscription.png');
			.button.send
				relative bottom 6px;
	.close.button
		absolute top 4px; z-index 1; font-size 14px; padding 5px 7px 25px;
		.icon
			icon(20px, 20px, 'xtras-white/37-circle-x.png');

.composer
	position absolute; bottom 0; width 320px; background #126EAF; z-index 2;
	.surface
		bodyRadius = 6px; bodyWidth = 320px;

	.tools
		margin-top -5px;
		.closeTextInput
			absolute bottom 0 right 0; width 40px; height 40px;
			.icon
				absolute bottom 6px right 6px; icon(22px, 22px, 'white/298-circlex.png')
		.right
			float right;
		.tool
			display inline-block; margin 2px 0 0 4px; border-radius 4px; height 18px; width 24px; padding 6px 12px 8px;
			.icon.draw
				icon(24px, 20px, 'white/98-palette.png')
			.icon.write
				icon(24px, 22px, 'white/09-chat-2.png')
			.icon.photo
				icon(24px, 18px, 'white/86-camera.png')
		.tool.send
			float right; margin-right 1px;
