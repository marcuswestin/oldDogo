@import "./macros"
@import "./questions"
@import "./buttons"
@import "./common"

blueDropShadow()
	box-shadow 0 1px 1px rgba(18, 110, 175, 0.74);

conversationFaceStyle()
	blueDropShadow(); border 1px solid; border-radius 2px;
	border-color #fff transparent transparent #fff;

fromThemGradient(alpha1, alpha2)
	gradient(rgba(242, 254, 255, alpha1), rgba(211, 243, 255, alpha2))
fromMeGradient(alpha1, alpha2)
	gradient(rgba(255, 255, 255, alpha1), rgba(221, 238, 255, alpha2))

.messageContainer
	margin-top 4px;
	.messageBubble
		margin 3px 0; display inline-block;
		.arrow
			margin-top 10px;
		.textContent
			max-width 198px;
		.pictureContent
			border-radius 4px;
	.textMessage
		.messageBubble
			border-top none;
	.face
		conversationFaceStyle();
	.pictureMessage
		.gradient
			border-radius 4px;
	.fromThem
		margin-right 36px;
		.face
			float left;
		.arrow
			float left; margin-left -7px
		.messageBubble
			fromThemGradient(1, 1); margin-left 8px;
	.fromThem.pictureMessage
		margin 0 4px 0 0;
		.gradient
			fromThemGradient(0, 0.5);
	.fromMe
		margin-left 36px;
		.face
			float right;
		.arrow
			float right; display inline-block; margin-right -6px;
		.messageBubble
			float right; fromMeGradient(1, 1); margin-right 8px;
	.fromMe.pictureMessage
		margin 0 0 0 4px;
		.gradient
			fromMeGradient(0, 0.5);

.messageBubble
	border-radius 4px; blueDropShadow();
	border 1px solid #fff; word-wrap break-word;
	.textContent
		light(); padding 4px 10px 5px; text-shadow 0 2px 1px rgba(255, 255, 255, 0.81);

#conversationView
	padding 0 0 80px 0;
	.personName
		padding 12px 0 14px; font-size 18px; font-weight bold; color #fff; text-shadow 0 1px 0 rgba(25,25,50,.76); text-align center;
	.ghostTown
		padding 130px 10px;
	.messagesList
		padding 4px;
	.dogo-info
		blueNotice()
		margin 8px 0 8px -4px; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;
	.loading
		margin-top 100px; text-shadow none; color #fff; font-style italic;
	.invite
		text-align center; width 100%; text-shadow 0 1px 1px rgba(255,255,255,.75);
		.button
			font-size 22px; text-shadow rgba(0,0,0,.3); margin 4px auto; padding 8px 8px 8px; width 250px;
			.face
				display inline-block; blueDropShadow(); border-radius 2px; margin-bottom -1px;
				box-shadow 0 0 15px rgba(255, 255, 255, 0.3);

.drawer
	line-height 0; z-index 2; background #000;
	.loading
		relative top 150px; font-size 30px;
	.controls-pos
		position absolute; bottom 0; z-index 1;
	.controls
		line-height 20px;
		.picker
			position absolute;
		.toolPicker
			bottom 75px; left 3px;
			.secondary
				absolute bottom 0 left 5px; box-shadow 0 0 1px #ccc;
		.right
			float right; position relative; bottom 1px;
			.button
				margin 0 2px; padding 4px 10px 6px;
				.icon
					display inline-block;
			.button.undo
				padding-bottom 0px; margin-top 1px;
			.button.send
				relative bottom 6px;
	.close.button
		absolute top 4px; z-index 1; font-size 14px; padding 5px 7px 25px;

#composer
	absolute bottom 0; width 320px; z-index 2;
	.surface
		bodyRadius = 6px; bodyWidth = 320px;

	.tools
		gradient(rgba(255,255,255, 0), rgba(255,255,255, .5))
		.tool
			display inline-block; margin 0 0 0 6px; border-radius 6px; height 18px; width 24px; padding 6px 12px 8px;
			box-shadow 0 1px 0px rgba(18, 110, 175, 0.74);
			border 1px solid;
			border-color rgba(255,255,255,1) rgba(255,255,255,.75) rgba(255,255,255,.7) rgba(255,255,255,.9);
	.inputArea
		gradient(rgba(255,255,255, .5), rgba(255,255,255, 1)); padding-bottom 6px;
		
	.textInputBackground
		border 1px solid; border-radius 2px;
		border-color darken(buttonColor, 20%) lighten(buttonColor, 0%) lighten(buttonColor, 5%) darken(buttonColor, 15%);
		background #fff; blueDropShadow();
	.face
		conversationFaceStyle(); float right;
	.paint
		top 55px;

.card
	background #fff; border 1px solid #ddd #bbb #bbb #eee; margin 6px 6px 6px 6px; clear both;
	min-height 78px; border-radius 1px;
	blueDropShadow();
	.face.large
		box-shadow 0 1px 1px rgba(0, 50, 100, 0.50)
		margin 4px 4px 0 4px; background #ccc; float left; border-radius 1px;
	.summary
		padding 4px;
		.name
			font-size 26px; line-height 28px; float left; margin 6px 0 0 4px;
			color #393949; text-shadow 0px 1px 0px rgba(0,0,120,0.1);
			.first, .rest
				white-space nowrap; max-width 150px;
		.right
			float right; 
			.time
				color #126EAF; font-size 12px; font-weight bold; margin 4px 4px 0 0;
				text-shadow 0 1px 0 #ddd;
			.unreadDot
				float right; margin 8px 8px 0 0;
		.lastMessage
			clear both; padding-top 4px;
			.face
				margin
		.info
			clear both; font-style italic; font-size 18px; padding 16px 0; text-align center;
