@import "./macros"
@import "./questions"
@import "./buttons"
@import "./common"

blueShadowColor(alpha=0.74)
	rgba(18, 110, 175, alpha);

blueDropShadow()
	box-shadow 0 1px 1px blueShadowColor();

conversationFaceStyle()
	border 1px solid; border-radius 2px;
	border-color #fff #fff #fff #fff;
	-webkit-box-shadow: 0 1px 1px 0 rgba(0,0,0,.3), inset 0 1px 1px 0 rgba(0,0,0,.3);

fromThemGradient(alpha1, alpha2)
	borderColor = rgba(189,189,187,1)
	border 1px solid borderColor;
	gradient(rgba(231,231,231, alpha1), rgba(206,206,206, alpha2));
	-webkit-box-shadow: inset 0 1px 0 0 rgba(254,254,254,1),
		inset -1px 0 0 0 rgba(255,255,255, .2),
		inset 0 -1px 0 0 rgba(borderColor, .5),
		inset 1px 0 0 0 rgba(255,255,255, .2),
		0 1px 0 0 rgba(borderColor, .2);
	// gradient(rgba(242, 254, 255, alpha1), rgba(211, 243, 255, alpha2))
fromMeGradient(alpha1, alpha2)
	borderColor = rgb(112,154,55)
	border 1px solid borderColor;
	gradient(#AAF94E, #93DA3E);
	-webkit-box-shadow: inset 0 1px 0 0 rgba(206,254,149,1),
		inset -1px 0 0 0 rgba(119,163,67, .3),
		inset 0 -1px 0 0 rgba(borderColor, .5),
		inset 1px 0 0 0 rgba(119,163,67, .3),
		0 1px 0 0 rgba(borderColor, .2);
	// gradient(rgba(255, 255, 255, alpha1), rgba(171, 213, 255, alpha2))

bubbleBorderRadius = 14px;

.homeView .messageContainer
	.textMessage, .audioMessage
		.messageBubble
			margin-top 1px;
	.messageBubble
		.textContent
			max-width 216px;
			overflow hidden;
			text-overflow ellipsis;
			white-space nowrap;

.messageContainer
	margin-top 4px;
	font-size 14px;
	.messageBubble
		// -webkit-box-shadow: 0 1px 1px 1px rgba(7, 39, 61, 0.4), inset 0 1px 1px 0px rgba(7, 39, 61, 0.4)
		margin 3px 0; display inline-block;
		.arrow
			display inline-block; 
			display none;
			margin-top 10px;
		.textContent
			max-width 198px;
		.pictureContent
			border-radius bubbleBorderRadius - 3px;
			-webkit-box-shadow: inset 0px 1px 1px 1px rgba(0, 0, 0, 0.4);
	.textMessage, .audioMessage
		.messageBubble
			margin-top 5px;
	.face
		conversationFaceStyle();
	.fromThem
		margin-right 36px;
		.face
			float left;
		.arrow
			float left; margin-left -7px
		.messageBubble
			fromThemGradient(1, 1); margin-left 8px;
	.fromThem.pictureMessage
		margin 0 -2px 0 0;
	.fromMe
		margin-left 30px;
		.face
			float right;
		.arrow
			float right; margin-right -6px;
		.messageBubble
			float right; fromMeGradient(1, 1); margin-right 4px;
			color #000;
	.fromMe.pictureMessage
		margin 0 0 0 -2px;

.messageBubble
	border-radius bubbleBorderRadius; // blueDropShadow();
	word-wrap break-word;
	.textContent
		light(); padding 4px 10px 5px; // text-shadow 0 2px 1px rgba(255, 255, 255, 0.81);

#conversationView
	padding 20px 0 50px 0;
	.personName
		padding 8px 0 6px; font-weight normal; font-size 22px; color #fff; text-shadow 0 1px 1px blueShadowColor(.5); text-align center;
	.messagesList
		padding 4px;
	.dogo-info
		blueNotice()
		margin 8px 0 8px -4px; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;
	.loading
		margin-top 100px; text-shadow none; color #fff; font-style italic;
	.invite
		text-align center; width 100%; text-shadow 0 1px 1px rgba(255,255,255,.75);
		.button
			font-size 22px; text-shadow rgba(0,0,0,.3); margin 4px auto; padding 8px 8px 8px; width 250px;
			.face
				display inline-block; blueDropShadow(); border-radius 2px; margin-bottom -1px;
				box-shadow 0 0 15px rgba(255, 255, 255, 0.3);

.drawer
	z-index 2; background #000; padding-top 20px;
	.loading
		relative top 150px; font-size 30px;
	.buttons
		float right;
		.button
			display block; margin 0 6px 6px; padding 5px 14px 7px
	.drawTools
		margin 8px 6px;

toolBorder()
	border 1px solid;
	border-color rgba(255,255,255,1) rgba(255,255,255,.75) rgba(255,255,255,.7) rgba(255,255,255,.9);

#composer
	alpha = .6
	twoTone(
		rgba(255,255,255, .45), rgba(appBackgroundTo, .35),
		rgba(184, 215, 255, 0.8), rgba(71, 152, 255, 0.5));
	
	.tools
		.tool
			margin 0 0 0 6px; border-radius 6px; height 18px; width 27px; padding 7px 14px 9px;
			box-shadow 0 1px 0px rgba(18, 110, 175, 0.74);
			toolBorder();
			twoTone(#227EBF, #025E9F, darken(#025E9F, 0%), darken(#025E9F, 10%));
		.write .icon
			margin-top -1px;
		.voice .icon
			margin-top -2px;
		.location .icon
			margin-top -2px;
			
	.textInputArea
		border-radius 2px;
		border 1px solid; border-color textBorder1 textBorder2 textBorder3 textBorder4;
		background #fff;
		-webkit-box-shadow:
			inset 1px 1px 1px -1px rgba(0, 60, 150, .5),
			0 1px 1px -1px #000;
		img
			margin-bottom -3px;
	
.locationContent
	gradient(rgb(97, 105, 116), keyboardFrom);
	-webkit-box-shadow: inset 0 8px 19px -8px rgba(0,0,0,0.65);

#voiceTool
	.button
		padding 9px 10px 9px; margin 5px 5px 5px 5px;

.card
	background #fff; border 1px solid #ddd #bbb #bbb #eee; margin 6px 4px; clear both; border 1px solid #fff;
	min-height 78px; border-radius 3px;
	blueDropShadow();
	.gradient
		height 90px; gradient(rgba(226, 241, 255, 0.5), rgba(226, 241, 255, 0)); margin-bottom -90px;
	.person
		.face
			box-shadow 0 1px 1px rgba(0, 50, 100, 0.50);
			margin 4px 4px 0 4px; background #ccc; float left; border-radius 3px;
	.summary
		padding 4px;
		.name
			font-size 26px; line-height 28px; float left; margin 6px 0 0 4px;
			color #393949; text-shadow 0px 1px 1px #fff;
			.first, .rest
				white-space nowrap; max-width 150px;
		.right
			float right; 
			.time
				color #126EAF; font-size 12px; font-weight bold; margin 4px 4px 0 0;
				text-shadow 0 1px 0 #fff;
			.unreadDot
				float right; margin 8px 8px 0 0;
		.lastMessage
			clear both; padding-top 4px;
			.face
				margin
		.info
			clear both; font-style italic; font-size 18px; padding 16px 0; text-align center;
