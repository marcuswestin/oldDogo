@import "./macros"
@import "./questions"
@import "./buttons"
@import "./common"
@import "./card"

blueShadowColor(alpha=0.74)
	rgba(18, 110, 175, alpha);

blueDropShadow()
	box-shadow 0 1px 1px blueShadowColor();

conversationFaceStyle()
	border-radius 2px;
	border 1px solid; border-color #fff #fff #fff #fff;
	-webkit-box-shadow: 0 1px 1px 0 rgba(50,50,50,.5);

fromThemGradient(alpha1, alpha2)
	borderColor = rgba(189,189,187,1)
	border 1px solid borderColor;
	gradient(rgba(231,231,231, alpha1), rgba(206,206,206, alpha2));
	-webkit-box-shadow: inset 0 1px 0 0 rgba(254,254,254,1),
		inset -1px 0 0 0 rgba(255,255,255, .2),
		inset 0 -1px 0 0 rgba(borderColor, .5),
		inset 1px 0 0 0 rgba(255,255,255, .2),
		0 1px 0 0 rgba(borderColor, .2);
	// gradient(rgba(242, 254, 255, alpha1), rgba(211, 243, 255, alpha2))
fromMeGradient(alpha1, alpha2)
	border 1px solid rgb(174, 224, 107);
	gradient(rgb(220, 255, 200), rgb(161, 221, 95))
	// gradient(#AAF94E, #93DA3E);
	-webkit-box-shadow: inset 0 1px 5px -1px rgb(255, 255, 255),
		inset -1px 0 0 0 rgba(119,163,67,0.3),
		inset 0 -1px 0 0 rgba(112,154,55,0.5),
		inset 1px 0 0 0 rgba(119,163,67,0.3),
		0 1px 0 0 rgba(112,154,55,0.2);
	// gradient(rgba(255, 255, 255, alpha1), rgba(171, 213, 255, alpha2))

bubbleBorderRadius = 14px;

.homeView .messageContainer
	.textMessage, .audioMessage
		.messageBubble
			margin-top 1px;
	.messageBubble
		.textContent
			max-width 216px;
			overflow hidden;
			text-overflow ellipsis;
			white-space nowrap;

.messageBubble
	border-radius bubbleBorderRadius; // blueDropShadow();
	word-wrap break-word;
	.textContent
		light(); padding 4px 10px 5px; // text-shadow 0 2px 1px rgba(255, 255, 255, 0.81);

#conversationView
	padding 20px 0 56px 0;
	.personName
		font-size 22px; color rgb(29,112,171); text-shadow 0 1px 0 blueShadowColor(.3); text-align center;
	.messagesList
		// padding 4px;
	.dogo-info
		blueNotice()
		margin 8px 0 8px -4px; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;
	.loading
		margin-top 100px; text-shadow none; color #fff; font-style italic;
	.invite
		text-align center; width 100%; text-shadow 0 1px 1px rgba(255,255,255,.75);
		.button
			font-size 22px; text-shadow rgba(0,0,0,.3); margin 4px auto; padding 8px 8px 8px; width 250px;
			.face
				display inline-block; blueDropShadow(); border-radius 2px; margin-bottom -1px;
				box-shadow 0 0 15px rgba(255, 255, 255, 0.3);

.drawer
	z-index 2; background #000; padding-top 20px;
	.loading
		relative top 150px; font-size 30px;
	.buttons
		float right;
		.button
			display block; margin 0 6px 6px; padding 5px 14px 7px
	.drawTools
		margin 8px 6px;

toolBorder()
	border 1px solid;
	border-color rgba(255,255,255,1) rgba(255,255,255,.75) rgba(255,255,255,.7) rgba(255,255,255,.9);

#composer
	background:-webkit-linear-gradient(top, rgba(255,255,255,0.50), rgba(213, 238, 255, 0.18) 50%, rgba(163,218,255,0.15) 50%, rgba(152,214,255,0.40));
	
	.tools
		.tool
			border-radius 6px; height 18px; width 27px; padding 9px 15px 12px;
			// box-shadow 0 1px 0px rgba(18, 110, 175, 0.74);
			// toolBorder();
			opacity .96;
			twoTone(#227EBF, #025E9F, darken(#025E9F, 0%), darken(#025E9F, 10%));
		.write .icon
			margin-top -1px;
		.voice .icon
			margin-top -2px;
		.location .icon
			margin-top -2px;
			
.textInputArea
	border-radius 2px;
	border 1px solid; border-color textBorder1 textBorder2 textBorder3 textBorder4;
	background #fff;
	-webkit-box-shadow:
		inset 1px 1px 1px -1px rgba(0, 60, 150, .5),
		0 1px 1px -1px #000;
	img
		margin-bottom -3px;
	
.locationContent
	gradient(rgb(97, 105, 116), keyboardFrom);
	-webkit-box-shadow: inset 0 8px 19px -8px rgba(0,0,0,0.65);

#voiceTool
	.button
		padding 9px 10px 9px; margin 5px 5px 5px 5px;
