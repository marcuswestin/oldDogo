@import "./macros"
@import "./questions"
@import "./buttons"
@import "./common"

blueDropShadow()
	box-shadow 0 1px 1px rgba(18, 110, 175, 0.74);

conversationFaceStyle()
	blueDropShadow(); border 1px solid; border-radius 2px;
	border-color #fff transparent transparent #fff;
	margin 0 6px;

.conversationView
	.ghostTown
		padding 150px 10px;
	.messagesList
		padding 4px 0 90px 0;
	.message
		.arrow
			margin-top 10px;
		.messageBubble
			margin 3px 2px; display inline-block;
			border-radius 3px; border 1px solid #fff; border-top none;
			word-wrap break-word; blueDropShadow();
			.textContent
				light(); padding 4px 10px 5px; max-width 200px; text-shadow 0 1px 0px rgba(255, 255, 255, 0.71);
			.pictureContent
				border-radius 4px;
		.face
			conversationFaceStyle();
		.fromThem
			margin 6px 36px 0 0;
			.face
				float left;
			.messageBubble
				gradient(#FFFAF2, #FFEED2);
			.arrow
				float left; margin-left -7px
		.fromMe
			margin 6px 0 0 36px;
			.face
				float right;
			.arrow
				float right; display inline-block; margin-right -6px;
			.messageBubble
				float right; gradient(#fff, #def);
		.pictureMessage
			.messageBubble
				box-shadow 0 0 0;
	.dogo-info
		blueNotice()
		width 100%; margin 8px 0; padding 4px 0 10px 0; border-width 1px 0; border-style solid;
		.encouragement
			font-size 23px; margin 0 0 4px 0;
		.personal
			font-size 18px; margin 0 0 3px 0;
		.button
			margin-top 4px;
	.loading
		margin-top 100px; text-shadow none; color #fff; font-style italic;
	.invite
		text-align center; width 100%;
		.button
			font-size 22px; text-shadow rgba(0,0,0,.3); margin 0 auto; padding 6px 8px 8px; width 210px;

.drawer
	line-height 0; z-index 2; background #000;
	.loading
		relative top 150px; font-size 30px;
	.controls-pos
		position absolute; bottom 0; z-index 1;
	.controls
		line-height 20px; padding 2px 0; box-shadow 0 -2px 3px #222; width 100%; height 33px;
		background #FC9545;
		.picker
			position absolute;
		.toolPicker
			bottom 55px; left 3px;
			.secondary
				absolute bottom 0 left 56px; box-shadow 0 0 1px #ccc;
		.right
			float right; position relative; bottom 1px;
			.button
				margin 0 2px; padding 4px 10px 6px;
				.icon
					display inline-block;
			.button.undo
				padding-bottom 0px; margin-top 1px;
			.button.send
				relative bottom 6px;
	.close.button
		absolute top 4px; z-index 1; font-size 14px; padding 5px 7px 25px;

#composer
	absolute bottom 0; width 320px; z-index 2;
	.surface
		bodyRadius = 6px; bodyWidth = 320px;

	.tools
		.tool
			display inline-block; margin 0 0 0 6px; border-radius 6px; height 18px; width 24px; padding 6px 12px 8px;
			box-shadow 0 1px 0px rgba(18, 110, 175, 0.74);
			border 1px solid;
			border-color rgba(255,255,255,1) rgba(255,255,255,.75) rgba(255,255,255,.7) rgba(255,255,255,.9);
	.textInputBackground
		border 1px solid; border-radius 2px;
		border-color darken(buttonColor, 20%) lighten(buttonColor, 0%) lighten(buttonColor, 5%) darken(buttonColor, 15%);
		background #fff; blueDropShadow();
	.face
		conversationFaceStyle(); float right;

.card
	background #fff; border 1px solid #ddd #bbb #bbb #eee; margin 6px 6px 7px 6px; clear both; position relative; box-shadow 0 1px 1px #333; min-height 78px;
	.face
		position relative; top -3px; left -2px; background #ccc; box-shadow 0 1px 1px #444; float left;
	.summary
		margin-left 76px;
		padding 6px;
		.name
			font-weight bold; font-size 15px; text-shadow 0 1px 0 #ddd; max-width 165px;
		.time
			color #126EAF; font-size 12px; float right; margin 3px 3px 0 2px; font-weight bold; text-shadow 0 1px 0 #ddd; max-width 50px;
