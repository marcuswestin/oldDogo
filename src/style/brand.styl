brandGradient(where=center, amount=120%)
	background -webkit-radial-gradient(where, circle cover, #FFF4C4 0%, #FFB714 (amount));
	width 100%; height 100%;

brandGradientBackground()
	html, body
		height 100%; min-height 100%;
	#webpage
		brandGradient(154px 110px, 600px);
		min-height 100%;
	@media only screen and (max-device-width: 480px)
		#webpage
			brandGradient(60px 87px, 260px);
