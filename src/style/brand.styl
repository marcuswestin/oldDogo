brandGradient(where=center, amount=120%)
	background -webkit-radial-gradient(where, circle cover, #FFF4C4 0%, #FFB714 (amount));
	width 100%; height 100%;

logoIcon(size=64)
	disable-select(); bgImg('logoIcon', size, size);

logoName(w=78,h=34)
	disable-select(); bgImg('logoName', w, h);

brandGradientBackground()
	html, body
		height 100%; min-height 100%;
	#content
		brandGradient(154px 110px, 700px);
		min-height 100%;
	@media screen and (-webkit-min-device-pixel-ratio: 2), screen and (max--moz-device-pixel-ratio: 2)
		#content
			brandGradient(60px 45px, 300px);

bgImg(name, w, h)
	disable-select(); width (w)px; height (h)px;
	background url("/static/img/"+name+"-"+w+"x"+h+".png") transparent no-repeat; background-size unit(w, 'px') unit(h, 'px');
	@media only screen and (-webkit-min-device-pixel-ratio: 2)
		background url("/static/img/"+name+"-"+(w*2)+"x"+(h*2)+".png") transparent no-repeat; background-size unit(w, 'px') unit(h, 'px');
	
