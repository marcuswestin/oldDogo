.listMenu
	menuPadding = 12px;
	width 270px; margin 0 auto 20px;
	-webkit-box-shadow: 0 1px 2px -1px rgba(13,2,54,0.74); border-radius 5px;
	.menuItem:first-child
		border-top-left-radius 5px; border-top-right-radius 5px;
	.menuItem:last-child
		border-bottom-left-radius 5px; border-bottom-right-radius 5px;
	.menuItem
		background rgb(238,238,238); padding 11px 12px 13px;
		border 1px solid; border-color rgb(252,252,252) rgb(208,208,208) rgb(204,204,204);
		color #333; text-shadow 0 1px 0 #fff;
	.menuItem.active
		background rgb(221,221,221);
		border-top-color #B0B0B0;
		-webkit-box-shadow: inset 0 0px 1px -1px rgba(0,0,0,0.25), inset 0 -1px 1px 0 #fff;
	.menuItem:first-child.active
		border-top-color #fff;
		-webkit-box-shadow: inset 0 1px 1px 0 rgba(0,0,0,0.25), inset 0 -1px 1px 0 #fff;
	.menuItem input
		border none; padding 6px 8px; height 30px; display block;
		margin -(12px); background transparent; width 251px; text-shadow 0 1px 0 #fff;
	.menuItem input::-webkit-input-placeholder, .menuItem .placeholder
		color rgb(179,179,179); text-shadow 0 1px 0 #fff; font-family "Open Sans"; font-weight 400;
	.menuItem .pickColor
		padding 0 0 0 9px;
