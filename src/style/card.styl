.card
	border 1px solid #ddd #bbb #bbb #eee; margin 4px; clear both; border 1px solid #fff;
	min-height 78px; border-radius 3px;
	blueDropShadow();
	.gradient
		height 90px; gradient(rgba(226, 241, 255, 0.5), rgba(226, 241, 255, 0)); margin-bottom -90px;
	.person
		.face
			border 1px solid #fff;
			-webkit-box-shadow: 0 1px 1px rgba(0, 23, 46, 0.71), inset 0 0 2px 2px rgba(244, 253, 255, 0.41), inset 0 1px 1px 0 rgba(0,0,0,0.5)
			margin 4px 4px 0 4px; background #ccc; float left; border-radius 3px;
	.recent
		padding 4px;
		.name
			font-size 26px; line-height 28px; float left; margin 6px 0 0 4px;
			color #393949; text-shadow 0px 1px 1px #fff;
			.first, .rest
				white-space nowrap; max-width 150px;
		.right
			float right; 
			.time
				color #126EAF; font-size 12px; font-weight bold; margin 4px 4px 0 0;
				text-shadow 0 1px 0 #fff;
			.unreadDot
				float right; margin 8px 8px 0 0;
		.recentMessage
			clear both; padding-top 4px;
			.face
				margin
		.info
			clear both; font-style italic; font-size 18px; padding 16px 0; text-align center;
